<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group">

        <label for="titleInput">Title</label>
        <input id="titleInput" class="form-control" type="text" name="composeTitle" autocomplete="off">

        <label for="postInput">Post</label>
        <textarea class="form-control" name="composePost" id="postInput" rows="5"></textarea>

    </div>

    <button class="btn btn-primary btn-md active" type="submit" name="button">Publish</button>
</form>


<%- include("partials/footer"); -%>